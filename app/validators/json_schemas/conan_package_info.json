{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Conan Info Schema",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "settings": {
          "type": "object"
        },
        "requires": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "options": {
          "type": "object"
        }
      },
      "required": [
        "settings",
        "requires",
        "options"
      ],
      "additionalProperties": true
    }
  ]
}
